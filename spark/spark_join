In [1]: joinA = sc.textFile("File:///home/cloudera/joinA.txt")

In [2]: joinB = sc.textFile("File:///home/cloudera/joinB.txt")

In [3]: # mapper for the file :

In [4]: def split_file(line):
    key, value = line.split(",")
    key = key.split()
    if len(key)>=2: return key[1], key[0]+" "+value 
    else: return key[0],int(value)

In [5]: mapper_joinB = joinB.map(split_file)

In [6]: mapper_joinB.collect()
Out[6]: 
[(u'able', u'Jan-01 5'),
 (u'about', u'Feb-02 3'),
 (u'about', u'Mar-03 8'),
 (u'able', u'Apr-04 13'),
